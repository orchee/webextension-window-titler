{
  "manifest_version": 2,
  "name": "Window Titler",
  "version": "3.0",
  "description": "Label your windows and profiles using custom window titles.",
  "applications": {
    "gecko": {
      "id": "{35dd5f9a-ca89-4643-b107-f07d09cc94b5}"
    }
  },
  "options_ui": {
    "page": "/src/presentation/options/options.html",
    "browser_style": true,
    "chrome_style": true
  },
  "browser_action": {
    "default_title": "Window Titler",
    "default_popup": "/src/presentation/popup/popup.html",
    "default_icon": "/assets/icons/dark/icon-32.png",
    "theme_icons": [
      {
        "light": "/assets/icons/light/icon-w-16.png",
        "dark": "/assets/icons/dark/icon-16.png",
        "size": 16
      },
      {
        "light": "/assets/icons/light/icon-w-24.png",
        "dark": "/assets/icons/dark/icon-24.png",
        "size": 24
      },
      {
        "light": "/assets/icons/light/icon-w-32.png",
        "dark": "/assets/icons/dark/icon-32.png",
        "size": 32
      },
      {
        "light": "/assets/icons/light/icon-w-48.png",
        "dark": "/assets/icons/dark/icon-48.png",
        "size": 48
      },
      {
        "light": "/assets/icons/light/icon-w-64.png",
        "dark": "/assets/icons/dark/icon-64.png",
        "size": 64
      },
      {
        "light": "/assets/icons/light/icon-w-96.png",
        "dark": "/assets/icons/dark/icon-96.png",
        "size": 96
      },
      {
        "light": "/assets/icons/light/icon-w-128.png",
        "dark": "/assets/icons/dark/icon-128.png",
        "size": 128
      },
      {
        "light": "/assets/icons/light/icon-w-256.png",
        "dark": "/assets/icons/dark/icon-256.png",
        "size": 256
      }
    ]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Ctrl+T"
      }
    }
  },
  "icons": {
    "16": "/assets/icons/dark/icon-16.png",
    "24": "/assets/icons/dark/icon-24.png",
    "32": "/assets/icons/dark/icon-32.png",
    "48": "/assets/icons/dark/icon-48.png",
    "64": "/assets/icons/dark/icon-64.png",
    "96": "/assets/icons/dark/icon-96.png",
    "128": "/assets/icons/dark/icon-128.png",
    "256": "/assets/icons/dark/icon-256.png"
  },
  "permissions": [
    "sessions",
    "storage"
  ],
  "background": {
    "page": "/src/presentation/background/background.html"
  }
}
